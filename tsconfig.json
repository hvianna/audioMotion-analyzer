{
    "compilerOptions": {
        "target": "es6",
        "useDefineForClassFields": false,
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": false,
        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./dist/types",
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": true,
    },
    "include": [
        "src",
        "types"
    ],
}